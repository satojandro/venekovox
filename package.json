{
  "name": "maci",
  "version": "3.0.0",
  "description": "Minimal Anti-Collusion Infrastructure",
  "repository": "https://github.com/privacy-scaling-explorations/maci",
  "license": "MIT",
  "scripts": {
    "benchmarks": "lerna run benchmarks",
    "build": "lerna run build --ignore=website",
    "build:circuits-c": "lerna run build-test-circuits-c --scope \"@maci-protocol/circuits\"",
    "build:circuits-wasm": "lerna run build-test-circuits-wasm --scope \"@maci-protocol/circuits\"",
    "setup:zkeys": "NODE_OPTIONS=--max-old-space-size=4096 lerna run generate-zkeys --scope \"@maci-protocol/circuits\"",
    "clean": "lerna exec -- rm -rf node_modules build && rm -rf node_modules",
    "commit": "git cz",
    "download-zkeys:test": "ts-node ./.github/scripts/downloadZkeys.ts test ./zkeys",
    "download-zkeys:ceremony": "ts-node ./.github/scripts/downloadZkeys.ts prod ./zkeys",
    "prettier": "prettier -c .",
    "prettier:fix": "prettier -w .",
    "lint:ts": "eslint './**/**/*.ts' './**/**/*.tsx'",
    "lint:ts:fix": "pnpm run lint:ts --fix",
    "lint:sol": "solhint './packages/contracts/contracts/**/*.sol'",
    "lint:sol:fix": "pnpm run lint:sol --fix --noPrompt",
    "test:integration": "lerna run test:integration --scope \"@maci-protocol/testing\"",
    "test:e2e": "lerna run test:e2e --scope \"@maci-protocol/testing\"",
    "test:unit": "lerna run test:unit --scope \"@maci-protocol/testing\"",
    "test:stress": "lerna run test:stress --scope \"@maci-protocol/testing\"",
    "test:hardhat": "lerna run test:hardhat --scope \"@maci-protocol/contracts\"",
    "test": "lerna run test --ignore \"@maci-protocol/testing\"",
    "test:relayer": "lerna run test --scope \"@maci-protocol/relayer\"",
    "test:coordinator": "lerna run test --scope \"@maci-protocol/coordinator\"",
    "types": "lerna run types",
    "docs": "lerna run docs",
    "prepare": "is-ci || husky",
    "generate-maci-keypair": "node packages/cli/build/ts/index.js generateMaciKeyPair"
  },
  "author": "PSE",
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.57.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-json": "^4.0.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-unused-imports": "^4.1.4",
    "husky": "^9.1.7",
    "is-ci": "^4.1.0",
    "lerna": "^8.2.3",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "prettier-plugin-solidity": "^2.1.0",
    "solhint": "^6.0.0",
    "tar": "^7.4.3",
    "ts-node": "^10.9.1",
    "typedoc": "^0.28.9",
    "typedoc-plugin-markdown": "^4.8.0",
    "typescript": "^5.9.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "engines": {
    "node": "20",
    "pnpm": "9 || 10"
  }
}
